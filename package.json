{
  "name": "assign-watch",
  "description": "View all your LEB2 assignments in one place",
  "private": true,
  "version": "0.2.7",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "build:all": "wxt build && wxt build -b firefox",
